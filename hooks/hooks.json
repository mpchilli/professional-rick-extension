{
  "hooks": {
    "BeforeAgent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "reinforce-pickle-persona",
            "type": "command",
            "command": "node ${extensionPath}/extension/hooks/dispatch.js reinforce-persona",
            "description": "Injects persona directives to ensure the agent explains its steps"
          }
        ]
      }
    ],
    "BeforeModel": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "increment-iteration",
            "type": "command",
            "command": "node ${extensionPath}/extension/hooks/dispatch.js increment-iteration",
            "description": "Increments the iteration"
          },
          {
            "name": "check-limit",
            "type": "command",
            "command": "node ${extensionPath}/extension/hooks/dispatch.js check-limit",
            "description": "Checks if the iteration or time limit has been reached"
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "pickle-rick-loop",
            "type": "command",
            "command": "node ${extensionPath}/extension/hooks/dispatch.js stop-hook",
            "description": "The Pickle Rick infinite loop mechanism"
          }
        ]
      }
    ]
  }
}